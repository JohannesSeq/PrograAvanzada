@{
    ViewBag.Title = "Inicio";
}

<main class="container my-5">


    <div id="patitosCarousel" class="carousel slide mb-5" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#patitosCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#patitosCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#patitosCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner rounded shadow">
            <div class="carousel-item active">
                <img src="~/Content/img/BancoLosPatitos1.png" class="d-block w-100" alt="Slide 1">
            </div>
            <div class="carousel-item">
                <img src="~/Content/img/BancoLosPatitos2.png" class="d-block w-100" alt="Slide 2">
            </div>
            <div class="carousel-item">
                <img src="~/Content/img/BancoLosPatitos3.png" class="d-block w-100" alt="Slide 3">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#patitosCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Anterior</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#patitosCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Siguiente</span>
        </button>
    </div>

    <section class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary">SINPE Empresarial</h1>
        <p class="lead text-muted">
            Plataforma desarrollada para la gestión de pagos electrónicos a través de SINPE.
            Permite a comercios afiliados validar pagos, administrar sus cajas y visualizar transacciones.
        </p>
        <hr class="my-4" />
        <p class="text-secondary">
            Proyecto académico desarrollado en el curso de <strong>Programación Avanzada</strong> siguiendo principios de
            <strong>Clean Code</strong>, <strong>SOLID</strong> y <strong>arquitectura por capas</strong>.
        </p>
    </section>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow border-0 h-100">
                <div class="card-body text-center">
                    <h4 class="card-title text-primary fw-bold">Módulo de Comercios</h4>
                    <p class="card-text text-muted">Registra, edita y gestiona comercios afiliados a la plataforma.</p>
                    @Html.ActionLink("Ir al módulo", "Index", "COMERCIOs", new { area = "" }, new { @class = "btn btn-outline-primary btn-lg mt-3 w-100" })
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow border-0 h-100">
                <div class="card-body text-center">
                    <h4 class="card-title text-success fw-bold">Módulo de Cajas</h4>
                    <p class="card-text text-muted">Asocia cajas a los comercios y controla los teléfonos SINPE utilizados.</p>
                    @Html.ActionLink("Ir al módulo", "Index", "CAJAs", new { area = "" }, new { @class = "btn btn-outline-success btn-lg mt-3 w-100" })
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow border-0 h-100">
                <div class="card-body text-center">
                    <h4 class="card-title text-info fw-bold">Módulo de SINPE</h4>
                    <p class="card-text text-muted">Registra transacciones electrónicas simuladas hacia los comercios.</p>
                    @Html.ActionLink("Ir al módulo", "Create", "SINPEs", new { area = "" }, new { @class = "btn btn-outline-info btn-lg mt-3 w-100" })
                </div>
            </div>
        </div>
    </div>

    <div class="row text-center mt-5">
        <div class="col-md-12">
            <div class="card shadow border-0">
                <div class="card-body">
                    <h4 class="card-title text-dark fw-bold">Bitácora de Eventos</h4>
                    <p class="card-text text-muted">Consulta las acciones realizadas en el sistema con fines de trazabilidad.</p>
                    @Html.ActionLink("Ver Bitácora", "Index", "BITACORAs", new { area = "" }, new { @class = "btn btn-dark btn-lg mt-2" })
                </div>
            </div>
        </div>
    </div>
</main>
