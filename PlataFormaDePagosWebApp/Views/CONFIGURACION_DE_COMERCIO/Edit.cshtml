@model PlataFormaDePagosWebApp.CONFIGURACION_DE_COMERCIO
@{
    ViewBag.Title = "Editar Configuración";
}
<h2>Editar Configuración</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.HiddenFor(model => model.idConfiguracion)
        @Html.HiddenFor(model => model.IdComercio)
        <div class="form-group">
            <label>Comercio</label>
            <input class="form-control" readonly value="@Model.COMERCIO?.Nombre" />
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.TipoConfiguracion)
            @Html.DropDownListFor(model => model.TipoConfiguracion, new SelectList(new[]{
                new {Value=1, Text="Plataforma"},
                new {Value=2, Text="Externa"},
                new {Value=3, Text="Ambas"}}, "Value", "Text", Model.TipoConfiguracion), "Seleccione", new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Comision)
            @Html.EditorFor(model => model.Comision, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Estado)
            @Html.CheckBoxFor(model => model.Estado)
        </div>
        <input type="submit" value="Guardar Cambios" class="btn btn-success" />
    </div>
}
