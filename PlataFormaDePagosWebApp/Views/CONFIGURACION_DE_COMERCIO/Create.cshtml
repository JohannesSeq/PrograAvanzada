@model PlataFormaDePagosWebApp.CONFIGURACION_DE_COMERCIO
@{
    ViewBag.Title = "Nueva Configuración";
}
<h2>Nueva Configuración</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.IdComercio)
            @Html.DropDownList("IdComercio", null, "Seleccione comercio", new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.TipoConfiguracion)
            @Html.DropDownListFor(model => model.TipoConfiguracion, new SelectList(new[]{
                new {Value=1, Text="Plataforma"},
                new {Value=2, Text="Externa"},
                new {Value=3, Text="Ambas"}}, "Value", "Text"), "Seleccione", new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Comision)
            @Html.EditorFor(model => model.Comision, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <input type="submit" value="Guardar" class="btn btn-primary" />
    </div>
}
