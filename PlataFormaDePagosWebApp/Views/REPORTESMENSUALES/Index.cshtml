@model IEnumerable<PlataFormaDePagosWebApp.REPORTESMENSUALES>

@{
    ViewBag.Title = "Reportes Mensuales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary">Reportes Mensuales</h2>

        @using (Html.BeginForm("GenerarReportes", "REPORTESMENSUALES", FormMethod.Post, new { @class = "d-inline" }))
        {
            <button type="submit" class="btn btn-success shadow-sm rounded-pill px-4">
                <i class="fas fa-file-alt me-2"></i> Generar Reportes
            </button>
        }
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle shadow-sm">
            <thead class="table-light text-center">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault().COMERCIO.Nombre)</th>
                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault().CantidadDeCajas)</th>
                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault().MontoTotalRecaudado)</th>
                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault().CantidadDeSinpes)</th>
                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault().MontoTotalComision)</th>
                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault().FechaDelReporte)</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.COMERCIO.Nombre</td>
                        <td>@item.CantidadDeCajas</td>
                        <td>₡@item.MontoTotalRecaudado.ToString("N2")</td>
                        <td>@item.CantidadDeSinpes</td>
                        <td>₡@item.MontoTotalComision.ToString("N2")</td>
                        <td>@item.FechaDelReporte.ToString("dd/MM/yyyy")</td>
                        <td class="text-center">
                            <div class="d-flex justify-content-center gap-2">
                                <a href="@Url.Action("Edit", new { id = item.IdReporte })" class="btn btn-warning btn-sm" title="Editar">
                                    <i class="fas fa-pen me-1"></i> Editar
                                </a>
                                <a href="@Url.Action("Details", new { id = item.IdReporte })" class="btn text-white btn-sm" title="Detalles" style="background-color:#0d5191">
                                    <i class="fas fa-eye me-1"></i> Ver
                                </a>
                                <a href="@Url.Action("Delete", new { id = item.IdReporte })" class="btn btn-danger btn-sm" title="Eliminar">
                                    <i class="fas fa-trash-alt me-1"></i> Eliminar
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
