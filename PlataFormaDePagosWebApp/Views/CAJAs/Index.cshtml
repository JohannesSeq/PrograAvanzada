@model IEnumerable<PlataFormaDePagosWebApp.CAJA>

@{
    ViewBag.Title = "Cajas Registradas";
    Func<bool, string> estadoTexto = estado => estado ? "Activo" : "Inactivo";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary">Cajas Registradas</h2>
        <a href="@Url.Action("Create")" class="btn text-white shadow-sm rounded-pill px-4" style="background-color:#0d5191">
            <i class="fas fa-plus me-2"></i> Registrar Nueva Caja
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle shadow-sm">
            <thead class="table-light text-center">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().Nombre)</th>
                    <th>Descripción</th>
                    <th>@Html.DisplayNameFor(model => model.First().TelefonoSINPE)</th>
                    <th>@Html.DisplayNameFor(model => model.First().FechaDeRegistro)</th>
                    <th>Estado</th>
                    <th>Comercio</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        <td>
                            @(item.Descripcion != null && item.Descripcion.Length > 20
                                ? item.Descripcion.Substring(0, 20) + "..."
                                : item.Descripcion)
                        </td>
                        <td>@item.TelefonoSINPE</td>
                        <td>@item.FechaDeRegistro.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            <span class="badge bg-@(item.Estado ? "success" : "secondary")">
                                @estadoTexto(item.Estado)
                            </span>
                        </td>
                        <td>@item.COMERCIO.Identificacion</td>
                        <td class="text-center">
                            <div class="d-flex justify-content-center gap-2">
                                <a href="@Url.Action("Edit", new { id = item.IdCaja })" class="btn btn-warning btn-sm" title="Editar">
                                    <i class="fas fa-pen me-1"></i> Editar
                                </a>
                                <a href="@Url.Action("VerSinpe", "CAJAs", new { telefono = item.TelefonoSINPE })"
                                   class="btn btn-sm text-white" style="background-color:#0d5191" title="Ver SINPE">
                                    <i class="fas fa-eye me-1"></i> Ver
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
